<Window x:Class="Pokedex_Et_Tu_Bulbasaur.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pokedex_Et_Tu_Bulbasaur"
        mc:Ignorable="d"
    Title="Pokédex" Height="600" Width="350" Background="Red" ResizeMode="NoResize">
    <Grid Margin="10">
        <!-- Outer red shape -->
        <Border Background="Red" CornerRadius="20" BorderBrush="Black" BorderThickness="4">
            <Grid Margin="15">
                <!-- Screen -->
                <Border Background="DarkGray" BorderBrush="Black" BorderThickness="3" CornerRadius="5" Margin="10,10,10,150">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="5" Margin="0,73,0,0">
                        <TextBlock x:Name="OutputTextBlock" Text="INPUT Pokemon name or number and doubleclick on box" TextWrapping="Wrap" Foreground="White" FontFamily="Consolas" FontSize="14" Height="310"/>
                    </ScrollViewer>
                </Border>

                <!-- Green input area -->
                <Border Background="Green" BorderBrush="Black" BorderThickness="3" CornerRadius="3" Height="50" VerticalAlignment="Bottom" Margin="10,0,10,10">
                    <TextBox x:Name="InputTextBox" FontSize="16" VerticalContentAlignment="Center" Margin="5" MouseDoubleClick="InputTextBox_MouseDoubleClick" />
                </Border>

                <!-- Some decorative circles on top left -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Height="35" Width="109">
                    <Ellipse Fill="Blue" Width="30" Height="30" Stroke="Black" StrokeThickness="2" RenderTransformOrigin="0.422,-0.311"/>
                    <Ellipse Fill="Red" Width="15" Height="15" Stroke="Black" StrokeThickness="2" Margin="0,7,5,0"/>
                    <Ellipse Fill="Yellow" Width="15" Height="15" Stroke="Black" StrokeThickness="2" Margin="0,7,5,0"/>
                    <Ellipse Fill="Green" Width="15" Height="15" Stroke="Black" StrokeThickness="2" Margin="0,7,0,0"/>
                </StackPanel>

                <!-- Bottom buttons (as simple rectangles) -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,70" >
                    <Rectangle Fill="Gray" Width="30" Height="30" Stroke="Black" StrokeThickness="2"/>
                    <Rectangle Fill="Turquoise" Width="40" Height="15" Stroke="Black" StrokeThickness="2" VerticalAlignment="Center"/>
                    <Rectangle Fill="DarkGray" Width="30" Height="30" Stroke="Black" StrokeThickness="2"/>
                </StackPanel>

            </Grid>
        </Border>
    </Grid>
</Window>
